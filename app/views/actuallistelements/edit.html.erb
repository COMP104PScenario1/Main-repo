  </div>
</div>

<div class="create">
  <div class="container">
    
    <%= form_for(@actuallistelement) do |f| %>
    	<div class="field">
        	<%= f.label :Time %> <br>
        	<%= f.text_area :time %>
    	</div>
    	<div class="field">
        	<%= f.label :Task %> <br>
        	<%= f.text_area :task %>
